<Page x:Class="Ишбулатов41размер.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ишбулатов41размер"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" 
                   Text="логин:" 
                   Margin="50,100,15,0" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="16" Height="23"/>

        <TextBox x:Name="LoginTextBox" 
                 Grid.Row="0" Grid.Column="1" 
                 Margin="10,100,300,10" 
                 FontSize="16" Width="200"/>

        <TextBlock Grid.Row="1" Grid.Column="1" 
                   Text="пароль:" 
                   Margin="50,100,0,0" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontSize="16" Height="22"/>

        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="1" Grid.Column="1" 
                     Margin="10,100,300,10" 
                     Width="200"
                     FontSize="16"/>

        <Button x:Name="LoginButton" 
                Grid.Row="2" Grid.Column="0"
                Content="Войти" 
                Margin="5"
                HorizontalAlignment="Stretch"
                Click="LoginButton_Click"/>

        <Button x:Name="GuestButton" 
                Grid.Row="2" Grid.Column="1"
                Content="Войти как гость" 
                Margin="5"
                HorizontalAlignment="Stretch"
                Click="GuestButton_Click"/>

        <TextBlock x:Name="CaptchaText" 
                   Grid.Row="2" Grid.Column="1"
                   Text="" 
                   FontSize="20" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed" Height="0" Width="0"/>

        <TextBox x:Name="CaptchaTextBox" 
                 Grid.Row="2" Grid.Column="1"
                 Width="150"
                 Height="30"
                 FontSize="16"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="232,175,0,0"
                 Visibility="Collapsed"/>

        <Button x:Name="RefreshCaptchaButton" 
                Grid.Row="2" Grid.Column="1"
                Content="Обновить капчу" 
                Width="120"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="247,195,0,0"
                Visibility="Collapsed"
                Click="RefreshCaptchaButton_Click"/>

        <TextBlock x:Name="BlockTimerText" 
                   Grid.Row="2" Grid.Column="1"
                   Text="" 
                   Foreground="Red"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,330,0,0"
                   Visibility="Collapsed" Height="0" Width="0"/>
    </Grid>
</Page>
