<Page x:Class="Ишбулатов41размер.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ишбулатов41размер"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1600"
      Title="ProductPage" FontFamily="Comic Sans MS">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock x:Name="CountTextBlock" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,91,0,0" FontSize="16" Width="125" Height="25"></TextBlock>
        <!-- редактировать положение колво-->

        <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Width="302"  Margin="96,90,0,5">
            <StackPanel Orientation="Vertical" Height="55" Width="334">
                <!-- расстояние тут корректировать между "колво" и "поиск" -->
                <TextBlock Text="поиск по наименованию" TextAlignment="Center" Width="250" FontSize="17" Height="29"/>
                <TextBox x:Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged"  Width="200" FontSize="15" Height="23" />
            </StackPanel>
        </WrapPanel>
        <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Width="302" Margin="96,90,0,5" >
            <StackPanel  Width="250" Height="55" VerticalAlignment="Top" HorizontalAlignment="Right" >
                <TextBlock Text="фильтрация по скидке" TextAlignment="Center" Width="250" FontSize="17" Height="29"/>
                <ComboBox x:Name="ComboType" SelectionChanged="ComboType_SelectionChanged" Width="180" FontSize="15"  Height="24">
                    <TextBlock><Run Text="все диапазоны"/></TextBlock>
                    <TextBlock><Run Text="от 0 до 9,99%"/></TextBlock>
                    <TextBlock><Run Text="от 10 до 14,99%"/></TextBlock>
                    <TextBlock><Run Text="от 15% и более"/></TextBlock>
                </ComboBox>
            </StackPanel>
        </WrapPanel>
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Top" Margin="466,92,423,0" >
            <RadioButton Content="по возврастанию стоимости" GroupName="Sort" Width="250" Height="21" FontSize="16" Checked="RadioButton_Checked" x:Name="RButtonUp" />
            <RadioButton Content="по убыванию стоимости" GroupName="Sort" Width="250" Height="20" FontSize="16" Checked="RadioButton_Checked_1" x:Name="RButtonDown" />
        </StackPanel>



        <ListView Name="ProductListView" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition  Width="800"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>

                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="200" Grid.Column="0" Grid.RowSpan="4" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /Properties/pictures/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontWeight="Bold" FontSize="20" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="Скидка" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16"></TextBlock>
                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="16"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Right" FontWeight="Bold" FontSize="34"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="14"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
